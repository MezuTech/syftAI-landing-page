    <!-- Scripts -->
    <script>
        lucide.createIcons();

        // FAQ Toggle Logic
        function toggleFaq(button) {
            const content = button.nextElementSibling;
            const icon = button.querySelector('i');
            
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }

        // Theme Toggle Logic (3-State)
        const toggleBtnDesktop = document.getElementById('theme-toggle');
        const toggleBtnMobile = document.getElementById('theme-toggle-mobile');
        const html = document.documentElement;
        
        // State: 'light' | 'dark' | 'system'
        let currentThemeState = localStorage.getItem('themeState') || 'system';

        // Icons
        const icons = {
            light: 'sun',
            dark: 'moon',
            system: 'monitor'
        };

        function applyTheme() {
            // 1. Remove forced classes first
            html.classList.remove('dark', 'light');

            // 2. Determine actual visual theme
            if (currentThemeState === 'system') {
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    html.classList.add('dark');
                } else {
                    html.classList.remove('dark'); // Default to light
                }
            } else if (currentThemeState === 'dark') {
                html.classList.add('dark');
            } else {
                html.classList.remove('dark'); // Light
            }

            // 3. Update Icons
            updateIcons(toggleBtnDesktop);
            updateIcons(toggleBtnMobile);
            
            // 4. Save state
            localStorage.setItem('themeState', currentThemeState);
        }

        function updateIcons(btn) {
            if (!btn) return;
            
            // Hide all icons
            btn.querySelectorAll('i').forEach(i => i.classList.add('hidden'));
            
            // Show current icon
            const currentIconId = `icon-${currentThemeState}`;
            // For desktop, we use IDs, for mobile we use classes as selectors might differ
            // Simply simpler: Look for the lucide data-lucide attribute logic re-render or class switching
            
            // Actually lucide renders SVG, so we toggle visibility of the specific SVGs if they exist
            // Re-render approach for simplicity with Lucide:
            
            // Alternative: The SVGs are already there hidden.
            // Desktop structure: i#icon-light, i#icon-dark, i#icon-system
            if (btn.id === 'theme-toggle') {
                btn.querySelector(`#icon-${currentThemeState}`).classList.remove('hidden');
            } else {
                // Mobile structure: i.icon-light, i.icon-dark...
                btn.querySelector(`.icon-${currentThemeState}`).classList.remove('hidden');
            }
        }

        function cycleTheme() {
            if (currentThemeState === 'light') currentThemeState = 'dark';
            else if (currentThemeState === 'dark') currentThemeState = 'system';
            else currentThemeState = 'light';
            
            applyTheme();
        }

        // Listeners
        if (toggleBtnDesktop) toggleBtnDesktop.addEventListener('click', cycleTheme);
        if (toggleBtnMobile) toggleBtnMobile.addEventListener('click', cycleTheme);

        // System change listener
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
            if (currentThemeState === 'system') {
                applyTheme();
            }
        });

        // Initialize
        applyTheme();

        // Scroll Animation Observer
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                    // optional: unobserve if you only want it to run once
                    // observer.unobserve(entry.target); 
                }
            });
        }, observerOptions);

        document.querySelectorAll('.reveal-on-scroll').forEach((el) => {
            observer.observe(el);
        });
        
    </script>
