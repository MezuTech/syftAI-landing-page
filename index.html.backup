    <style>
        /* CSS Variables for Theming */
        :root {
            /* Light Mode Colors */
            --brand-surface: #ffffff;
            --brand-card: #f9fafb;
            --brand-fill: #ffffff;
            --brand-on-surface: #0f172a;
            --brand-muted: #64748b;
            --brand-divider: #e2e8f0;
            --brand-primary: #4f46e5;
            --brand-secondary: #7c3aed;
            --brand-accent: #06b6d4;
        }

        .dark {
            /* Dark Theme Colors */
            --brand-surface: #0B0C15;
            --brand-card: #131420;
            --brand-fill: #1c1d2e;
            --brand-on-surface: #f8fafc;
            --brand-muted: #94a3b8;
            --brand-divider: #1e293b;
            --brand-primary: #818cf8;
            --brand-secondary: #a78bfa;
            --brand-accent: #22d3ee;
        }

        body { 
            background-color: var(--brand-surface); 
            color: var(--brand-on-surface); 
            font-family: 'Inter', sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }
        ::-webkit-scrollbar-track {
            background: var(--brand-surface);
        }
        ::-webkit-scrollbar-thumb {
            background: var(--brand-divider);
            border-radius: 5px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: var(--brand-muted);
        }
        
        /* Animated Grid Background */
        .bg-grid {
            mask-image: linear-gradient(to bottom, transparent, black 5%, black 95%, transparent);
            background-size: 50px 50px;
            background-image: linear-gradient(to right, rgba(99, 102, 241, 0.07) 1px, transparent 1px),
                              linear-gradient(to bottom, rgba(99, 102, 241, 0.07) 1px, transparent 1px);
            animation: grid-move 20s linear infinite;
        }
        
        @keyframes grid-move {
            0% { background-position: 0 0; }
            100% { background-position: 50px 50px; }
        }

        .gradient-text {
            background: linear-gradient(135deg, var(--brand-primary), var(--brand-secondary), var(--brand-accent));
            background-size: 200% 200%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: gradient 8s ease infinite;
        }
        
        /* Glass Navigation */
        .glass-nav {
            backdrop-filter: blur(20px) saturate(180%);
            -webkit-backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid var(--brand-divider);
            transition: all 0.3s ease;
        }
        
        html.dark .glass-nav {
             background: rgba(11, 12, 21, 0.85);
        }
        
        html:not(.dark) .glass-nav {
             background: rgba(255, 255, 255, 0.85);
        }
        
        .glass-nav.scrolled {
            box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1);
        }

        /* Scroll Reveal Animations */
        .reveal-on-scroll {
            opacity: 0;
            transform: translateY(40px);
            transition: all 0.9s cubic-bezier(0.16, 1, 0.3, 1);
        }
        .reveal-on-scroll.is-visible {
            opacity: 1;
            transform: translateY(0);
        }
        
        /* Parallax Effect */
        .parallax {
            transform: translateZ(0);
            will-change: transform;
        }
        
        /* Shimmer Effect for Cards */
        .shimmer-card {
            position: relative;
            overflow: hidden;
        }
        
        .shimmer-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s;
        }
        
        .shimmer-card:hover::before {
            left: 100%;
        }
        
        /* Animated Border */
        .animated-border {
            position: relative;
            border: 2px solid transparent;
            background: linear-gradient(var(--brand-surface), var(--brand-surface)) padding-box,
                        linear-gradient(135deg, var(--brand-primary), var(--brand-secondary)) border-box;
        }
        
        /* Pulse Ring Animation */
        @keyframes pulse-ring {
            0% {
                transform: scale(0.8);
                opacity: 1;
            }
            100% {
                transform: scale(1.4);
                opacity: 0;
            }
        }
        
        .pulse-ring {
            animation: pulse-ring 2s cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite;
        }
        
        /* Feature Card Hover Effect */
        .feature-card {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        
        .feature-card:hover {
            transform: translateY(-8px) scale(1.02);
        }
        
        /* Stat Counter Animation */
        @keyframes countUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .stat-number {
            animation: countUp 1s ease-out forwards;
        }
    </style>
</head>
